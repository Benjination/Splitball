<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/origami2"
    android:orientation="horizontal"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/Splitball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/splitball_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splitball" />

    <Button
        android:id="@+id/backToMain"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginBottom="196dp"
        android:text="@string/back_to_main"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/muteUnmute"
        app:layout_constraintStart_toStartOf="@+id/languages" />

    <Button
        android:id="@+id/languages"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginBottom="196dp"
        android:text="@string/languages"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/musicVolume"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="120dp"
        android:text="@string/music_volume"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/muteUnmute"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginBottom="196dp"
        android:text="@string/mute_unmute"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sfxVolume"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="120dp"
        android:text="@string/sfx_volume"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>