<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/origami2"
    android:orientation="horizontal"
    tools:context=".Classroom">

    <ImageView
        android:id="@+id/Splitball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="SplitBall Logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/splitball" />

    <Button
        android:id="@+id/backToMain"
        android:layout_width="318dp"
        android:layout_height="70dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="248dp"
        android:text="Main Menu"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="314dp"
        android:layout_height="83dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="320dp"
        android:text="Settings"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_marginEnd="696dp"
        android:layout_marginBottom="340dp"
        android:text="Exit"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/share"
        android:layout_width="294dp"
        android:layout_height="66dp"
        android:layout_marginEnd="408dp"
        android:layout_marginBottom="100dp"
        android:text="Share"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/restart"
        android:layout_width="285dp"
        android:layout_height="66dp"
        android:layout_marginEnd="704dp"
        android:layout_marginBottom="272dp"
        android:text="Restart"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/leaderboard"
        android:layout_width="316dp"
        android:layout_height="75dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="164dp"
        android:text="Leaderboard"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>