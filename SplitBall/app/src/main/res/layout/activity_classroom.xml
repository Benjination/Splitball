<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classjpg"
    android:orientation="horizontal"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/Splitball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="46dp"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ammoNumP"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#FF1111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ammoStar"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginStart="126dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#FF1111"
        app:layout_constraintStart_toEndOf="@+id/ammoAirplane"
        app:layout_constraintTop_toTopOf="@+id/ammoAirplane" />

    <TextView
        android:id="@+id/ammoAirplane"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginStart="372dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#FF1111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ammoNumP" />

    <TextView
        android:id="@+id/ammoKunai"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_marginStart="121dp"
        android:background="@color/black"
        android:gravity="center"
        android:textColor="#FF1111"
        app:layout_constraintStart_toEndOf="@+id/ammoStar"
        app:layout_constraintTop_toTopOf="@+id/ammoStar" />

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="192dp"
        android:layout_height="138dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paperballammo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="252dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paperplane" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="143dp"
        android:layout_height="118dp"
        android:layout_marginStart="648dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/kunai" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="139dp"
        android:layout_height="108dp"
        android:layout_marginStart="440dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

</androidx.constraintlayout.widget.ConstraintLayout>