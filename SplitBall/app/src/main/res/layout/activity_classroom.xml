    <ImageView
        android:id="@+id/heart1"
        android:layout_width="61dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/paperball"
        android:layout_width="192dp"
        android:layout_height="138dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paperballammo" />

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginStart="252dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paperplane" />

    <ImageView
        android:id="@+id/kunai"
        android:layout_width="143dp"
        android:layout_height="118dp"
        android:layout_marginStart="648dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/kunai" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="139dp"
        android:layout_height="108dp"
        android:layout_marginStart="440dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/score"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="72dp"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ball0"
        android:layout_width="109dp"
        android:layout_height="95dp"
        android:layout_marginStart="468dp"
        android:layout_marginTop="396dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="109dp"
        android:layout_height="95dp"
        android:layout_marginTop="532dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/ball1"
        android:layout_width="109dp"
        android:layout_height="95dp"
        android:layout_marginStart="916dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/ball3"
        android:layout_width="109dp"
        android:layout_height="95dp"
        android:layout_marginStart="908dp"
        android:layout_marginTop="540dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ball" />

</androidx.constraintlayout.widget.ConstraintLayout>