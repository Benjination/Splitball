<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/origami2"
    android:orientation="horizontal"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/Splitball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/splitball_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splitball" />

    <Button
        android:id="@+id/ajustes"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="@string/ajustes"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/connectToSocialSP"
        app:layout_constraintStart_toEndOf="@+id/classroomSP"
        app:layout_constraintStart_toStartOf="@+id/connectToSocialSP"
        app:layout_constraintTop_toBottomOf="@+id/Splitball" />

    <Button
        android:id="@+id/connectToSocialSP"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/conectate_a_las_redes_sociales"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/leaderboardSP"
        app:layout_constraintTop_toBottomOf="@+id/ajustes" />

    <Button
        android:id="@+id/classroomSP"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginTop="60dp"
        android:text="@string/jugar"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/leaderboardSP"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/leaderboardSP"
        app:layout_constraintTop_toBottomOf="@+id/Splitball" />

    <Button
        android:id="@+id/leaderboardSP"
        android:layout_width="300dp"
        android:layout_height="78dp"
        android:layout_marginStart="180dp"
        android:text="@string/lideres"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classroomSP" />


</androidx.constraintlayout.widget.ConstraintLayout>